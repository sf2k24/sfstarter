const total = this.totalPages;
  const maxVisiblePages = 10; // Maximum number of page buttons before showing '...'
  
  if (total <= maxVisiblePages) return Array.from({ length: total }, (_, i) => i);

  const pages: (number | string)[] = [];

  // Always include first 10 pages
  for (let i = 0; i < Math.min(10, total); i++) {
    pages.push(i);
  }

  // Add ellipsis if there are more pages beyond 10
  if (total > maxVisiblePages) {
    pages.push('...');
    pages.push(total - 1); // Ensure the last page is always visible
  }

  return pages;
